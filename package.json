{
  "name": "utils",
  "version": "0.0.0",
  "description": "jade's utils monorepo",
  "author": "jade-gjz <jiangang.zhang@jaderd.com>",
  "license": "MIT",
  "keywords": [
    "jade",
    "utils"
  ],
  "type": "module",
  "scripts": {
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "build": "pnpm -r build",
    "lint": "eslint --cache --quiet --fix **/*.{ts,tsx}",
    "fix:lint": "eslint --cache --quiet --fix **/*.{ts,tsx}",
    "check:type": "tsc --noEmit",
    "check:staged": "nano-staged",
    "pre-commit": "run-p check:type check:staged",
    "init:hooks": "npx simple-git-hooks",
    "prepare": "run-s init:*"
  },
  "devDependencies": {
    "@jhqn/eslint-config-ts": "^0.4.10",
    "@types/node": "^20.3.2",
    "@vitest/coverage-v8": "^0.32.2",
    "eslint": "^8.43.0",
    "nano-staged": "^0.8.0",
    "npm-run-all": "^4.1.5",
    "publint": "^0.1.12",
    "simple-git-hooks": "^2.8.1",
    "tsup": "^7.1.0",
    "typescript": "^5.1.3",
    "vitest": "^0.32.2"
  },
  "nano-staged": {
    "*.{js,ts}": "eslint --cache --quiet --fix"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm pre-commit"
  }
}
