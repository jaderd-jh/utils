{
  "name": "utils",
  "type": "module",
  "version": "0.0.1-beta.23",
  "private": true,
  "packageManager": "pnpm@8.7.4",
  "description": "jade's utils monorepo",
  "author": "jade-gjz <jiangang.zhang@jaderd.com>",
  "license": "MIT",
  "keywords": [
    "jade",
    "utils"
  ],
  "scripts": {
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "build": "pnpm -r build",
    "release": "bumpp -r",
    "lint": "eslint --cache --quiet --fix **/*.{ts,tsx}",
    "fix:lint": "eslint --cache --quiet --fix **/*.{ts,tsx}",
    "publint": "pnpm -r publint",
    "check:type": "tsc --noEmit",
    "check:staged": "nano-staged",
    "pre-commit": "run-p check:type check:staged",
    "init:hooks": "npx simple-git-hooks",
    "prepare": "run-s init:*"
  },
  "devDependencies": {
    "@jhqn/eslint-config-ts": "^0.6.1",
    "@types/node": "^20.5.7",
    "@vitest/coverage-v8": "^0.34.3",
    "bumpp": "^9.2.0",
    "eslint": "^8.48.0",
    "jsdom": "^22.1.0",
    "nano-staged": "^0.8.0",
    "npm-run-all": "^4.1.5",
    "publint": "^0.2.2",
    "simple-git-hooks": "^2.9.0",
    "typescript": "^5.2.2",
    "unbuild": "^2.0.0",
    "vite": "^4.4.9",
    "vitest": "^0.34.3"
  },
  "nano-staged": {
    "*.{js,ts}": "eslint --cache --quiet --fix"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm pre-commit"
  }
}
