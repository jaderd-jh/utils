{
  "compilerOptions": {
    "target": "ES2018",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "baseUrl": ".",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "paths": {
      "@jhqn/utils-core": ["packages/core/src"],
      "@jhqn/utils-crypto": ["packages/crypto/src"],
      "@jhqn/utils-crypto/aes": ["packages/crypto/src/aes"],
      "@jhqn/utils-crypto/base64": ["packages/crypto/src/base64"],
      "@jhqn/utils-crypto/base64url": ["packages/crypto/src/base64url"],
      "@jhqn/utils-crypto/md5": ["packages/crypto/src/md5"],
      "@jhqn/utils-faker": ["packages/faker/src"],
      "@jhqn/utils-msw": ["packages/msw/src"],
      "@jhqn/utils-storage": ["packages/storage/src"],
      "@jhqn/utils-storage/react": ["packages/storage/src/react"],
      "@jhqn/utils-storage/vue": ["packages/storage/src/vue"],
      "@jhqn/utils": ["packages/utils/src"]
    },
    "types": ["vite/client"],
    "strict": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "exclude": ["**/node_modules/**", "**/dist/**"]
}
